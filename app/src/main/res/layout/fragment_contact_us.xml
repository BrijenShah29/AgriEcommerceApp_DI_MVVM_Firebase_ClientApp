<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.UserProfileFragments.ContactUsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream"
        android:layout_marginTop="?actionBarSize"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/libre_baskerville_bold"
                android:text="Have any questions? we'd love to hear from you."/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="546dp"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@color/bg2"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Contact Information"
                        android:textColor="@color/white"
                        android:textSize="20dp" />
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="We've love to hear from you. Our friendly team is always here to chat"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="15dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/img4"
                            android:gravity="center"
                            android:scaleX="0.5"
                            android:scaleY="0.5"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:text="Contact Information"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/img5"
                            android:gravity="center"
                            android:scaleX="0.5"
                            android:scaleY="0.5"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:text="agri.shopping@gmail.com"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/img6"
                            android:gravity="center"
                            android:scaleX="0.5"
                            android:scaleY="0.5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="left"
                            android:textColor="@color/white"
                            android:text="\nEnrolment Services Centennial College \nP.O. Box 631, Station A\nToronto, ON, M1K 5E9"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="110dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/linkedln"
                            />
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/instagram"
                            />
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/facebook"
                            />
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/twitter"
                            />
                    </LinearLayout>

                </TableLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Message"
                android:textStyle="bold"
                android:textSize="30dp"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name*:"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center
"
                android:minHeight="48dp" />

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone*:"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center
"
                android:minHeight="48dp" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message*:"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
            <EditText
                android:layout_marginLeft="30dp"
                android:layout_width="300dp"
                android:gravity="center"
                android:id="@+id/editMessage"
                android:layout_height="wrap_content"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <Button
                android:id="@+id/contact_us"
                android:layout_marginLeft="140dp"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:gravity="center"
                android:backgroundTint="@color/bg2"
                />
        </LinearLayout>
    </ScrollView>


</FrameLayout>